<div class="card">
  <div class="card-content">
    <p class="title">
      <%= @contact.name %>
    </p>
    <p class="subtitle">
      <%= @contact.message %>
    </p>
  </div>
  <footer class="card-footer">
    <p class="card-footer-item">
      <span>
        <%= mail_to @contact.email,  @contact.email%>
      </span>
    </p>
    <p class="card-footer-item">
      <span>
        <%= link_to @contact.phone, "tel:#{@contact.phone}" %>
      </span>
    </p>
  </footer>
</div>