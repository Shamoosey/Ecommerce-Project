<!DOCTYPE html>
<html>
  <head>
    <title>Analog Trading</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.8.0/css/bulma.min.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <div class="navbar-item">
          <%= image_tag "logo.jpg"%>
          <h3 class="title is-3 is-bold has-text-black"><%= link_to "Analog Trading", root_path %></h3>
        </div>
      </div>
      <div class="navbar-menu">
        <div class="navbar-item has-dropdown is-hoverable">
            <a class="navbar-link">About</a>
          <div class="navbar-dropdown">
            <%= link_to('Contact', contact_path, html_options = {:class =>"navbar-item"}) %>
            <%= link_to('About Us', about_path, html_options = {:class =>"navbar-item"}) %>
          </div>
        </div>
      </div>
      <div class="navbar-end">
        <div class="navbar-item">
          <div class="buttons">
            <a class="button is-primary">
              <strong>Sign up</strong>
            </a>
            <a class="button is-light">
              Log in
            </a>
          </div>
        </div>
      </div>
    </nav>
    <section class="section">
      <div class="container">
      <%= render partial: 'product/search' %>
        <%= yield %>
      </section>
    </div>
  </body>
</html>
