<div style="margin-bottom: 25px" class="field has-addons">
  <%= form_with(url: search_path, local: true, method: "get") do %>
    <%= text_field_tag :search_term, nil, placeholder: 'Product Name', class: 'input' %>
    <span class="select">
      <%= select_tag "category_id", options_from_collection_for_select(Category.all, "id", "name"), class: 'select', include_blank: true %>
    </span>
    <%= submit_tag("Search", :class=>"button is-primary") %>
  <% end %>
</div>